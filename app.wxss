/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
/*通用功能:截取字符串....添加app.wxss*/
/*单行超出指定范围截取内容并添加...*/
.ell{
  overflow: hidden;   /*超出范围隐藏*/
  white-space: nowrap;   /*不允许换行*/
  text-overflow: ellipsis;  /*超出部分添加...*/
} 
.der{
  height:30rpx;
  background: #f1f1f1;
}
.cell{
  background:#fff;
  font-size: 16px;
}
.cell-item{
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #ddd;
}
/*通用功能:箭头*/
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center; 
}
.arrow::after{
  content: "";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;   /* 箭头边框*/
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);   /*旋转 45度*/
}